{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "composite": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/demo/**/*",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/**/*.stories.*",
    "src/main.js",
    "node_modules",
    "dist",
    "**/*.md",
    "index.html",
    "vite.config.js"
  ]
}
